{
  "name": "backend",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy --minify",
    "generate:db": "prisma generate --no-engine",
    "push:db": "prisma db push --accept-data-loss",
    "migrate:db": "prisma migrate dev --name init --create-only",
    "migrate:apply": "prisma migrate deploy",
    "migrate:reset": "prisma migrate reset --force --skip-seed"
  },
  "dependencies": {
    "@prisma/client": "^6.6.0",
    "@prisma/extension-accelerate": "^1.3.0",
    "backend": "link:",
    "hono": "^4.7.6"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250214.0",
    "prisma": "^6.6.0",
    "wrangler": "^4.4.0"
  }
}
